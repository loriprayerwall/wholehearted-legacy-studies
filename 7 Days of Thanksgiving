  <script>
    function copyJournal(dayId, button) {
      const dayContent = document.getElementById(dayId);
      const dayNumber = dayContent.querySelector('.day-number').textContent;
      const dayTheme = dayContent.querySelector('.day-theme').textContent;
      const scripture = dayContent.querySelector('.scripture-text').textContent;
      const scriptureRef = dayContent.querySelector('.scripture-ref').textContent;

      const prompts = dayContent.querySelectorAll('.journal-prompts li');
      let promptsText = '\nReflection Prompts:\n';
      prompts.forEach(prompt => {
        promptsText += '‚Ä¢ ' + prompt.textContent + '\n';
      });

      const textarea = dayContent.querySelector('.journal-area');
      const journalText = textarea.value;

      const fullText = `${dayNumber}: ${dayTheme}\n\n${scripture}\n${scriptureRef}\n${promptsText}\nMy Journal Entry:\n${journalText || '(No entry written yet)'}`;

      navigator.clipboard.writeText(fullText).then(() => {
        button.textContent = 'Copied!';
        button.style.background = '#8b5a2b';

        setTimeout(() => {
          button.textContent = 'Copy Full Journal to Clipboard';
          button.style.background = '#c17a3a';
        }, 2000);
      }).catch(err => {
        button.textContent = 'Failed to copy';
        button.style.background = '#8b5a2b';
        setTimeout(() => {
          button.textContent = 'Copy Full Journal to Clipboard';
          button.style.background = '#c17a3a';
        }, 2000);
      });
    }

    const days = ['day1', 'day2', 'day3', 'day4', 'day5', 'day6', 'day7'];

    const navigation = document.getElementById('navigation');
    days.forEach((day, index) => {
      const btn = document.createElement('button');
      btn.className = 'nav-btn';
      if (index === 0) btn.classList.add('active');
      btn.textContent = `Day ${index + 1}`;
      btn.onclick = () => showDay(day, btn);
      navigation.appendChild(btn);
    });

    function showDay(dayId, clickedBtn) {
      document.querySelectorAll('.day-content').forEach(content => {
        content.classList.remove('active');
      });
      document.querySelectorAll('.nav-btn').forEach(btn => {
        btn.classList.remove('active');
      });

      document.getElementById(dayId).classList.add('active');
      clickedBtn.classList.add('active');

      window.scrollTo({ top: 0, behavior: 'smooth' });
    }
  </script>
